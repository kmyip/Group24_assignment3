<Window x:Class="Group24_assignment3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Group24_assignment3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Master Tab">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="38*"/>
                        <ColumnDefinition Width="56*"/>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="17*"/>
                        <ColumnDefinition Width="676*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Group Management Information System (GMIS) " HorizontalAlignment="Left" Margin="62,25,0,0" VerticalAlignment="Top" FontSize="20" Grid.Column="4"/>
                    <Label Content="Master student View" HorizontalAlignment="Left" Margin="170,81,0,0" VerticalAlignment="Top" FontSize="20" Grid.Column="4"/>
                    <Button Content="Show all groups" HorizontalAlignment="Left" Margin="0,131,0,0" VerticalAlignment="Top" Click="Button_Click" FontSize="16" Grid.Column="3" Grid.ColumnSpan="2"/>
                    <Button Content="Show all students" HorizontalAlignment="Left" Margin="138,131,0,0" VerticalAlignment="Top" FontSize="16" Grid.Column="4"/>
                    <Button Content="Show all classes" HorizontalAlignment="Left" Margin="282,131,0,0" VerticalAlignment="Top" FontSize="16" Grid.Column="4"/>
                    <Button Content="Show all meetings" HorizontalAlignment="Left" Margin="418,131,0,0" VerticalAlignment="Top" FontSize="16" Grid.Column="4"/>
                    <!--<ListBox HorizontalAlignment="Left" Height="137" Margin="116,233,0,0" VerticalAlignment="Top" Width="586" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="ListBox_SelectionChanged_1"/>-->

                    <TextBlock HorizontalAlignment="Left" Margin="154,0,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" Height="26" Width="223" Grid.Column="4"/>
                    <Button Content="Search" HorizontalAlignment="Left" Margin="382,191,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.622,0.032" Grid.Column="4"/>
                    <ComboBox HorizontalAlignment="Left" Margin="4,188,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged" Grid.Column="2" Grid.ColumnSpan="3"/>
                    <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,240,127,30" Grid.Column="3" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>
            <TabItem Header="Bachelor Tab">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="63*"/>
                        <ColumnDefinition Width="731*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
        </TabControl>
